        return Menu("Boba Shake", 16000)
    elif pilihan == 3:
        return Menu("Mi Sundae", 14000)
    elif pilihan == 4:
        return Menu("Mi Ganas", 11000)
    elif pilihan == 5:
        return Menu("Creamy Mango Boba", 22000)
