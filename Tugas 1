class Menu:
    def __init__(self, nama, harga):
        self.nama = nama
        self.harga = harga
        self.next = None

class Keranjang:
    def __init__(self):
        self.head = None

    def tambah_pesanan(self, menu):
        if not self.head:
            self.head = menu
        else:
            current = self.head
            while current.next:
                current = current.next
            current.next = menu

    def tampilkan_pesanan(self):
        current = self.head
        i = 1
        while current:
            print(f"{i}. {current.nama} {current.harga} rupiah")
            current = current.next
            i += 1

    def total_harga(self):
        total = 0
        current = self.head
        while current:
            total += current.harga
            current = current.next
        return total

def input_pesanan():
    print("Menu yang tersedia:")
    print("1. Miexue Ice Cream : 5000")
    print("2. Boba Shake : 16000")
    print("3. Mi Sundae : 14000")
    print("4. Mi Ganas : 11000")
    print("5. Creamy Mango Boba : 22000")
